<?xml version="1.0" encoding="utf-8"?>
<com.rdc.mymap.view.MyMenu
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/my_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="20dp"
    android:layout_marginRight="20dp"
    app:interval="60dp"
    app:pos="right_bottom">

    <ImageView
        android:id="@+id/iv_main_menu"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/unlocak_bikes" />

    <LinearLayout
        android:id="@+id/ll_item1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="ofo单车"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginRight="6dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ofo" />
        <View
            android:layout_width="8dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_item2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="摩拜单车"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginRight="6dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mobike"/>
        <View
            android:layout_width="8dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_item3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="小鸣单车"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginRight="6dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mingbike"/>
        <View
            android:layout_width="8dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_item4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="优拜单车"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginRight="6dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/uibike"/>
        <View
            android:layout_width="8dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_item5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="小篮单车"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginRight="6dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bluegogo"/>
        <View
            android:layout_width="8dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_item6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="哈罗单车"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginRight="6dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/hellobike"/>
        <View
            android:layout_width="8dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

</com.rdc.mymap.view.MyMenu>