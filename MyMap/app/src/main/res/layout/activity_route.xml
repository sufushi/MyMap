<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#2d4ce6">
        <ImageView
        android:id="@+id/iv_back"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:padding="10dp"
        android:src="@drawable/back"
        android:layout_centerVertical="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="路线"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:layout_centerInParent="true" />
        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="10dp"
            android:src="@drawable/search"
            android:layout_alignParentRight="true"
            android:layout_marginRight="4dp"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="#2d4ce6">

        <TextView
            android:id="@+id/tv_bus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="公交"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:background="#556eea"/>
        <TextView
            android:id="@+id/tv_car"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="驾车"
            android:textSize="14sp"
            android:textColor="#ffffff"/>
        <TextView
            android:id="@+id/tv_bicycle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="骑行"
            android:textSize="14sp"
            android:textColor="#ffffff"/>
        <TextView
            android:id="@+id/tv_walk"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="步行"
            android:textSize="14sp"
            android:textColor="#ffffff"/>
        <TextView
            android:id="@+id/taxi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="出租车"
            android:textSize="14sp"
            android:textColor="#ffffff"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2dp"
                    android:src="@drawable/blue_point" />

                <com.rdc.mymap.view.UnderlineEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:background="#ffffff"
                    android:hint="我的位置"
                    android:gravity="center_vertical"
                    android:textSize="15sp"
                    android:singleLine="true"
                    android:textColorHint="#302e2e"

                    android:textColor="#1d1717"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_pass_by"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2dp"
                    android:src="@drawable/green_point" />

                <com.rdc.mymap.view.UnderlineEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:background="#ffffff"
                    android:hint="途经地点"
                    android:textSize="15sp"
                    android:textColor="#1d1717" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2dp"
                    android:src="@drawable/red_point" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:background="#ffffff"
                    android:hint="输入终点"
                    android:textSize="15sp"
                    android:textColor="#1d1717"/>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_plus"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_margin="12dp"
            android:src="@drawable/plus" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#efeeee"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="12dp">

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#efeeee">

    </android.support.v4.view.ViewPager>

</LinearLayout>
