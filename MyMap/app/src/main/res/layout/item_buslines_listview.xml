<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginTop="6dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_lines"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="44dp"
        android:text="地铁7号线 → 地铁3号线 → 番16路"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#fb0e0000"
        android:gravity="center_vertical"
        android:layout_marginLeft="4dp"/>

    <TextView
        android:id="@+id/tv_lines_info"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:text="1小时29分   16站   步行2.0公里"
        android:textSize="12sp"
        android:textColor="#251919"
        android:gravity="center_vertical"
        android:layout_marginLeft="4dp"/>

    <TextView
        android:id="@+id/tv_station"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="大学城南站（B口）"
        android:textSize="13sp"
        android:textColor="#231f1f"
        android:gravity="center_vertical"
        android:layout_marginLeft="4dp"/>

</LinearLayout>
