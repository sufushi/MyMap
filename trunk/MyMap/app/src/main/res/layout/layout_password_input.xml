<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f3f3"
    android:gravity="bottom">

    <LinearLayout
        android:id="@+id/ll_input_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#f5f3f3">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/back"
                android:padding="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="输入密码"
                android:textSize="20sp"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#a4a0a0"/>
        <LinearLayout
            android:id="@+id/ll_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_button">
            <TextView
                android:id="@+id/tv_input1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="32sp"
                android:gravity="center"
                android:inputType="numberPassword"/>
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#a6a3a3"/>
            <TextView
                android:id="@+id/tv_input2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="32sp"
                android:gravity="center"
                android:inputType="numberPassword"/>
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#a6a3a3"/>
            <TextView
                android:id="@+id/tv_input3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="32sp"
                android:gravity="center"
                android:inputType="numberPassword"/>
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#a6a3a3"/>
            <TextView
                android:id="@+id/tv_input4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="32sp"
                android:gravity="center"
                android:inputType="numberPassword"/>
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#a6a3a3"/>
            <TextView
                android:id="@+id/tv_input5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="32sp"
                android:gravity="center"
                android:inputType="numberPassword"/>
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#a6a3a3"/>
            <TextView
                android:id="@+id/tv_input6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="32sp"
                android:gravity="center"
                android:inputType="numberPassword"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码？"
            android:textColor="#7a66ed"
            android:textSize="14sp"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"/>
    </LinearLayout>

    <GridView
        android:id="@+id/gv_keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_input_area"
        android:layout_marginTop="40dp"
        android:background="#dcdbdb"
        android:horizontalSpacing="0.5dp"
        android:verticalSpacing="0.5dp"
        android:numColumns="3"
        android:listSelector="@null">
    </GridView>

    <com.rdc.mymap.view.PayResultAnimation
        android:id="@+id/pra"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:clickable="false" />
</RelativeLayout>
