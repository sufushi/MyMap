<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_edittext_normal"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginTop="6dp">

    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_picture"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/pikaqiu"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="6dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="8dp">

        <TextView
            android:id="@+id/tv_restaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="岭南餐厅岭南餐厅岭南餐厅岭南餐厅岭南餐厅"
            android:textColor="#151111"
            android:textSize="18sp"
            android:singleLine="true"
            android:layout_marginLeft="6dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="4dp">
            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_star1"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/star"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_star2"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/star"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_star3"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/star"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_star4"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/star"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_star5"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/star"/>
            <TextView
                android:id="@+id/tv_rank"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="评分：3.8"
                android:textColor="#a4a3a3"
                android:textSize="15sp"
                android:layout_marginLeft="2dp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人均：￥"
                android:textColor="#a4a3a3"/>
            <TextView
                android:id="@+id/tv_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="32"
                android:textColor="#a4a3a3"
                android:layout_marginRight="4dp"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp">
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_kind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="粤菜"
                android:layout_marginLeft="6dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="760m"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_marginRight="4dp"/>
            <TextView
                android:id="@+id/tv_show_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="营业时间：8:00-21:30 周一至周日"
                android:textSize="15sp"
                android:singleLine="true"
                android:textColor="#484747"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系方式："
                android:textSize="12sp"
                android:textColor="#a4a3a3"
                android:layout_marginLeft="6dp"/>
            <TextView
                android:id="@+id/tv_telephone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="15019754401"
                android:singleLine="true"
                android:textSize="14sp"
                android:textColor="#a4a3a3"
                android:gravity="left"
                android:layout_marginLeft="2dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击进入详情 >"
                android:textColor="#277cf2"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginRight="4dp"/>
        </LinearLayout>



    </LinearLayout>
</LinearLayout>
